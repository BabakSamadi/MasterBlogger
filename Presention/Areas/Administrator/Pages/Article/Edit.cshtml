@page "{id:int}"
@model Presention.Areas.Administrator.Pages.Article.EditModel
@{
}

<div class="card">
	<div class="card-header">
		<h2>Edit Article Category: @Model.Article.Title</h2>
	</div>
	<div class="card-body">
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<input type="hidden" asp-for="Article.Id" />
					<div class="col-md-6 col-sm-12">
						<div class="form-group">
							<label asp-for="Article.Title" class="control-label">Title:</label>
							<input asp-for="Article.Title" class="form-control" />
						</div>
					</div>
					<div class="col-md-6 col-sm-12">
						<div class="form-group">
						 	<label asp-for="Article.ShortDescription" class="control-label">shortDiscription:</label>
							<textarea asp-for="Article.ShortDescription" class="form-control" rows="3"></textarea>
						</div>
					</div>

					<div class="col-md-6 col-sm-12">
						<div class="form-group">
							<label asp-for="Article.Image" class="control-label">Title:</label>
							<input asp-for="Article.Image" class="form-control" />
						</div>
					</div>
					
					<div class="col-md-6 col-sm-12">
						<div class="form-group">
							<label asp-for="Article.content" class="control-label">content:</label>
							<textarea asp-for="Article.content" class="form-control" rows="5"></textarea>
						</div>
					</div> 
					
					<div class="col-md-6 col-sm-12">
						<div class="form-group">
							<label asp-for="Article.ArticleCategoryId" class="control-label">ArticleCategory:</label>
							<select asp-for="Article.ArticleCategoryId" asp-items="Model.ArticleCategory " class="form-control">
								<option value="0"> select Article Category</option>
							</select>
						</div>
					</div>
					<div class="form-group">
						<input type="submit" value="Edit" class="btn btn-warning" />
						<a class="btn btn-dark" asp-page="./List" asp-area="Administrator">Back to list</a>a
					</div>
				</form>
			</div>
		</div>
	</div>
</div>